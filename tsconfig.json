    
{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "*": [
        "src/*"
      ]
    },
    "outDir": "dist",
    "jsx": "react",
    "allowJs": true,
    "strict": false,
    "pretty": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "allowSyntheticDefaultImports": true,
    "lib": ["es6", "es7", "dom"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "static",
    "build",
    "node_modules"
  ]
}
